{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./bradstarter/general/frontend/*"],
      "@auth/*": ["./bradstarter/auth/frontend/*"],
      "@users/*": ["./bradstarter/users/frontend/*"],
      "@items/*": ["./bradstarter/items/frontend/*"],
      "@admin/*": ["./bradstarter/admin/frontend/*"]
    }
  },
  "include": [
    "./bradstarter/general/frontend/**/*",
    "./bradstarter/auth/frontend/**/*",
    "./bradstarter/users/frontend/**/*",
    "./bradstarter/items/frontend/**/*",
    "./bradstarter/admin/frontend/**/*",
    "playwright.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
